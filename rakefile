require 'rubygems'
require 'rubygems/package_task'
require 'rake/testtask'

spec = Gem::Specification.new do |s|
  s.name         = 'fakerest'
  s.version      = '0.0.3'
  s.date         = '2012-08-21'
  s.summary      = "Fake rest"
  s.description  = "Sinatra base http server which fakes the rest services based on the config given"
  s.authors      = ["Srivatsa Katta"]
  s.email        = 'vatsa.katta@gmail.com'
  s.files        = ["lib/fakerest.rb", "lib/fakerest/argumentsparser.rb"]
  s.executables  = 'fakerest'
  s.homepage     = 'http://github.com/katta/fakerest'
  s.add_dependency('sinatra','>=1.3.2' )
end

Gem::PackageTask.new(spec) do |pkg|
  nil
end

Rake::TestTask.new do |t|
  t.libs << "test"
  t.test_files = FileList["test/**/test*.rb"]
  t.options = "-v"
end

task :default => [:test, :repackage]
