require 'rubygems'
require 'rubygems/package_task'

spec = Gem::Specification.new do |s|
  s.name        = 'fakerest'
  s.date        = '2012-08-21'
  s.summary     = "Fake rest"
  s.description = "Sinatra base http server which fakes the rest services based on the config given"
  s.authors     = ["Srivatsa Katta"]
  s.email       = 'vatsa.katta@gmail.com'
  s.files       = ["lib/fakerest.rb"]
  s.executables = 'fakerest'
  s.homepage    = 'http://srivatsakatta.com'
end

Rake::PackageTask.new(spec, '0.0.1') { |pkg| puts "Install the gem created in directory #{pkg.package_dir}" }

task :default => [:package]
